<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Megaventory Settings</title>
    </head>    
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Mv_Megaventory::megaventory_settings</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Mv\Megaventory\Block\Settings" name="settings"/>
        </referenceContainer>
    </body>
</page>